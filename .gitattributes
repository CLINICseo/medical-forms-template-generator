# Auto detect text files and perform LF normalization
* text=auto

# TypeScript/JavaScript files
*.ts text eol=lf
*.tsx text eol=lf
*.js text eol=lf
*.jsx text eol=lf
*.json text eol=lf

# Markdown files
*.md text eol=lf

# Config files
*.yml text eol=lf
*.yaml text eol=lf
*.xml text eol=lf

# Documentation
*.txt text eol=lf

# Images
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg text eol=lf

# Archives
*.zip binary
*.tar binary
*.gz binary

# Fonts
*.ttf binary
*.otf binary
*.woff binary
*.woff2 binary
*.eot binary

# PDF files
*.pdf binary

# Lock files (should always use LF)
package-lock.json text eol=lf
*.lock text eol=lf