{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2018",
    "outDir": "dist",
    "rootDir": "src",
    "sourceMap": true,
    "strict": false,
    "noEmit": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/app.ts"
  ],
  "exclude": [
    "node_modules", 
    "dist", 
    "tests", 
    "functions",
    "src/functions/**/*",
    "src/shared/**/*",
    "src/index.ts",
    "src/index.test.ts"
  ]
}
